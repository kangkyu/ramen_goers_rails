<% if @top_rankings.present? %>
  <section class="mb-10">
    <div class="flex justify-between items-center flex-wrap gap-5 mb-10">
      <div>
        <h2 class="text-3xl">ğŸ† Top Ramen Spots</h2>
        <p class="text-gray-600">Most visited restaurants this month</p>
      </div>
      <a href="<%= rankings_path %>" class="inline-flex items-center justify-center px-5 py-2.5 rounded text-sm font-medium border-2 border-purple-500 text-purple-500 hover:bg-purple-500 hover:text-white transition-all">View All Rankings</a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
      <% @top_rankings.each_with_index do |restaurant, index| %>
        <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl hover:-translate-y-1 transition-all">
          <div class="relative h-52 overflow-hidden bg-gradient-to-br from-purple-500 to-purple-700">
            <% if restaurant.image.present? %>
              <img src="<%= restaurant.image %>" alt="<%= restaurant.name %>" class="w-full h-full object-cover hover:scale-105 transition-transform">
            <% else %>
              <div class="w-full h-full bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center text-white text-5xl"></div>
            <% end %>
            <span class="absolute top-2.5 left-2.5 py-2 px-3.5 rounded-full font-bold text-white <%= index == 0 ? 'bg-yellow-400 !text-gray-800' : index == 1 ? 'bg-gray-400 !text-gray-800' : 'bg-amber-700' %>"><%= index + 1 %></span>
          </div>

          <div class="p-5">
            <h3 class="text-lg mb-2"><%= restaurant.name %></h3>
            <p class="text-gray-600 text-sm mb-3"><%= restaurant.address %></p>
            <div class="flex justify-between text-xs text-gray-600">
              <span>âœ“ <%= restaurant.total_visits %> visits</span>
              <span>ğŸ‘¥ <%= restaurant.unique_visitors %> users</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

