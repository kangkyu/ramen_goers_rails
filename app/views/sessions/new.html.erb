<div class="auth-container">
  <div class="auth-card">
    <h1>Create Account</h1>
    
    <% if @user.errors.any? %>
      <div class="alert alert-error">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= form_with model: @user, local: true, url: sign_up_path, method: :post, class: "auth-form" do |form| %>
      <div class="form-group">
        <%= form.label :name, "Name" %>
        <%= form.text_field :name, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password" %>
        <%= form.password_field :password_confirmation, required: true, class: "form-input" %>
      </div>

      <%= form.submit "Register", class: "btn btn-primary btn-full" %>
    <% end %>

    <p class="auth-hint">Already have an account?</p>

    <a href="<%= login_path %>" class="btn btn-outline btn-full">Sign In</a>

    <div class="auth-footer">
      <a href="<%= root_path %>">Back to Home</a>
    </div>
  </div>
</div>

<style>
  .auth-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 200px);
    padding: 20px;
  }

  .auth-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 40px;
    width: 100%;
    max-width: 400px;
  }

  .auth-card h1 {
    margin-bottom: 30px;
    font-size: 24px;
    font-weight: 600;
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-group label {
    font-weight: 500;
    font-size: 14px;
  }

  .form-input {
    padding: 10px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
  }

  .alert {
    margin-bottom: 20px;
    padding: 12px;
    border-radius: 4px;
    background-color: #fee;
    border: 1px solid #fcc;
    color: #c33;
  }

  .alert h2 {
    font-size: 14px;
    margin-bottom: 8px;
  }

  .alert ul {
    margin: 0;
    padding-left: 20px;
  }

  .auth-hint {
    margin-top: 20px;
    font-size: 13px;
    color: #666;
  }

  .auth-footer {
    margin-top: 20px;
    text-align: center;
  }

  .auth-footer a {
    color: #007bff;
    text-decoration: none;
    font-size: 14px;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }
</style>
