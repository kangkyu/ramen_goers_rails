<div class="flex items-center justify-center min-h-[calc(100vh-200px)] p-5">
  <div class="bg-white rounded-lg shadow-md p-10 w-full max-w-[400px]">
    <h1 class="text-2xl font-semibold mb-8">Sign in</h1>

    <%= form_with local: true, url: login_path, method: :post, class: "flex flex-col gap-5" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.label :email, "Email", class: "font-medium text-sm" %>
        <%= form.email_field :email, required: true, class: "py-2.5 px-3 border border-gray-300 rounded text-sm" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :password, "Password", class: "font-medium text-sm" %>
        <%= form.password_field :password, required: true, class: "py-2.5 px-3 border border-gray-300 rounded text-sm" %>
      </div>

      <%= form.submit "Sign in", class: "w-full inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded text-sm font-medium bg-gradient-to-br from-purple-500 to-purple-700 text-white hover:-translate-y-0.5 hover:shadow-lg transition-all cursor-pointer" %>
    <% end %>

    <p class="mt-5 text-sm text-gray-600">No account? Use Register below or any email/password you prefer.</p>

    <a href="<%= sign_up_path %>" class="mt-3 w-full inline-flex items-center justify-center px-5 py-2.5 rounded text-sm font-medium border-2 border-purple-500 text-purple-500 hover:bg-purple-500 hover:text-white transition-all">Register</a>

    <div class="mt-5 text-center">
      <a href="<%= root_path %>" class="text-blue-600 text-sm hover:underline">Back to Home</a>
    </div>
  </div>
</div>
