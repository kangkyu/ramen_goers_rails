<div class="max-w-3xl mx-auto p-5">
  <div class="mb-8 rounded-lg overflow-hidden">
    <% if @restaurant.image.present? %>
      <img src="<%= @restaurant.image %>" alt="<%= @restaurant.name %>" class="w-full h-[400px] object-cover">
    <% else %>
      <div class="w-full h-[400px] bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center text-white text-5xl"></div>
    <% end %>
  </div>

  <div class="bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl mb-4"><%= @restaurant.name %></h1>

    <div class="flex gap-4 mb-5 flex-wrap">
      <span class="text-gray-600">
        üìç <%= @restaurant.address %>
      </span>
      <% if @restaurant.cuisine.present? %>
        <span class="inline-block bg-gray-100 py-1 px-2.5 rounded text-sm"><%= @restaurant.cuisine %></span>
      <% end %>
    </div>

    <div class="flex gap-8 mb-8 p-5 bg-gray-50 rounded-lg">
      <div class="flex flex-col items-center">
        <span class="text-3xl font-bold text-purple-600"><%= @restaurant.total_visits %></span>
        <span class="text-xs text-gray-600 uppercase">Total Visits</span>
      </div>
      <div class="flex flex-col items-center">
        <span class="text-3xl font-bold text-purple-600"><%= @restaurant.unique_visitors %></span>
        <span class="text-xs text-gray-600 uppercase">Unique Visitors</span>
      </div>
    </div>

    <% if logged_in? %>
      <div class="mt-8 pt-8 border-t border-gray-200">
        <h2 class="text-xl mb-5">Check in to <%= @restaurant.name %></h2>

        <%= form_with model: [@restaurant, @visit], local: true, class: "flex flex-col gap-5" do |form| %>
          <div class="flex flex-col gap-2">
            <%= form.label :visit_date, "Visit date", class: "font-medium text-sm" %>
            <%= form.datetime_select :visit_date, {
              default: Time.current,
              use_month_numbers: true
            }, class: "py-2.5 px-3 border border-gray-300 rounded text-sm" %>
          </div>

          <div class="flex flex-col gap-2">
            <%= form.label :notes, "Notes (optional)", class: "font-medium text-sm" %>
            <%= form.text_area :notes, placeholder: "How was the ramen? Any recommendations?", class: "py-2.5 px-3 border border-gray-300 rounded text-sm font-sans resize-y min-h-[100px]" %>
          </div>

          <%= form.submit "Check In", class: "inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded text-sm font-medium bg-gradient-to-br from-purple-500 to-purple-700 text-white hover:-translate-y-0.5 hover:shadow-lg transition-all cursor-pointer" %>
        <% end %>
      </div>
    <% else %>
      <div class="mt-8 p-5 bg-gray-50 rounded-lg text-center">
        <p class="mb-4">Sign in to check in to this restaurant</p>
        <a href="<%= login_path %>" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded text-sm font-medium bg-gradient-to-br from-purple-500 to-purple-700 text-white hover:-translate-y-0.5 hover:shadow-lg transition-all">Sign In</a>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-8 text-center">
  <a href="<%= root_path %>" class="inline-flex items-center justify-center px-5 py-2.5 rounded text-sm font-medium border-2 border-purple-500 text-purple-500 hover:bg-purple-500 hover:text-white transition-all">‚Üê Back to Home</a>
</div>
