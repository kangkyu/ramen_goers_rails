<div class="restaurant-detail">
  <div class="restaurant-header">
    <% if @restaurant.image.present? %>
      <img src="<%= @restaurant.image %>" alt="<%= @restaurant.name %>" class="restaurant-image">
    <% else %>
      <div class="placeholder-image-large"></div>
    <% end %>
  </div>

  <div class="restaurant-info">
    <h1><%= @restaurant.name %></h1>
    
    <div class="restaurant-meta">
      <span class="meta-item">
        üìç <%= @restaurant.address %>
      </span>
      <% if @restaurant.cuisine.present? %>
        <span class="meta-item badge"><%= @restaurant.cuisine %></span>
      <% end %>
    </div>

    <div class="restaurant-stats">
      <div class="stat">
        <span class="stat-number"><%= @restaurant.total_visits %></span>
        <span class="stat-label">Total Visits</span>
      </div>
      <div class="stat">
        <span class="stat-number"><%= @restaurant.unique_visitors %></span>
        <span class="stat-label">Unique Visitors</span>
      </div>
      <div class="stat">
        <span class="stat-number" id="like-count-<%= @restaurant.id %>"><%= @restaurant.like_count %></span>
        <span class="stat-label">Likes</span>
      </div>
    </div>

    <% if logged_in? %>
      <div id="like-button-<%= @restaurant.id %>" class="mb-5">
        <%= render "likes/button", restaurant: @restaurant %>
      </div>
    <% end %>

    <% if logged_in? %>
      <div class="checkin-form-container">
        <h2>Check in to <%= @restaurant.name %></h2>
        
        <%= form_with model: [@restaurant, @visit], local: true, class: "checkin-form" do |form| %>
          <div class="form-group">
            <%= form.label :visit_date, "Visit date" %>
            <%= form.datetime_select :visit_date, { 
              default: Time.current,
              use_month_numbers: true 
            }, class: "form-input" %>
          </div>

          <div class="form-group">
            <%= form.label :notes, "Notes (optional)" %>
            <%= form.text_area :notes, placeholder: "How was the ramen? Any recommendations?", class: "form-textarea" %>
          </div>

          <%= form.submit "Check In", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% else %>
      <div class="login-prompt">
        <p>Sign in to check in to this restaurant</p>
        <a href="<%= login_path %>" class="btn btn-primary">Sign In</a>
      </div>
    <% end %>
  </div>
</div>

<div class="navigation">
  <a href="<%= root_path %>" class="btn btn-outline">‚Üê Back to Home</a>
</div>

<style>
  .restaurant-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .restaurant-header {
    margin-bottom: 30px;
    border-radius: 8px;
    overflow: hidden;
  }

  .restaurant-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .placeholder-image-large {
    width: 100%;
    height: 400px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 48px;
  }

  .restaurant-info {
    background: white;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .restaurant-info h1 {
    margin-bottom: 15px;
    font-size: 32px;
  }

  .restaurant-meta {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .meta-item {
    font-size: 16px;
    color: #666;
  }

  .restaurant-stats {
    display: flex;
    gap: 30px;
    margin-bottom: 30px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-number {
    font-size: 28px;
    font-weight: bold;
    color: #667eea;
  }

  .stat-label {
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
  }

  .checkin-form-container {
    margin-top: 30px;
    padding-top: 30px;
    border-top: 1px solid #eee;
  }

  .checkin-form-container h2 {
    margin-bottom: 20px;
    font-size: 20px;
  }

  .checkin-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-group label {
    font-weight: 500;
    font-size: 14px;
  }

  .form-input,
  .form-textarea {
    padding: 10px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    font-family: inherit;
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .login-prompt {
    margin-top: 30px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    text-align: center;
  }

  .navigation {
    margin-top: 30px;
    text-align: center;
  }
</style>
