<div class="max-w-6xl mx-auto py-10 px-5">
  <div class="text-center mb-10 py-10 px-10 bg-gradient-to-br from-purple-500 to-purple-700 text-white rounded-lg">
    <h1 class="text-4xl mb-2">ğŸ† Top Ramen Rankings</h1>
    <p class="opacity-90">Discover the most visited ramen restaurants in our community</p>
  </div>

  <% if @rankings.any? %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-10">
      <% total_visits = @rankings.sum { |r| r.total_visits } %>
      <% max_visitors = @rankings.max_by { |r| r.unique_visitors } %>
      <div class="bg-white p-5 rounded-lg shadow-md text-center">
        <span class="text-3xl block mb-2">ğŸ“ˆ</span>
        <p class="text-2xl font-bold mb-1"><%= total_visits %></p>
        <p class="text-gray-600 text-xs uppercase">Total Visits</p>
      </div>

      <div class="bg-white p-5 rounded-lg shadow-md text-center">
        <span class="text-3xl block mb-2">ğŸ‘¥</span>
        <p class="text-2xl font-bold mb-1"><%= max_visitors.unique_visitors %></p>
        <p class="text-gray-600 text-xs uppercase">Top Visitors</p>
      </div>

      <div class="bg-white p-5 rounded-lg shadow-md text-center">
        <span class="text-3xl block mb-2">ğŸ‘¨â€ğŸ³</span>
        <p class="text-2xl font-bold mb-1"><%= @rankings.first.restaurant.name %></p>
        <p class="text-gray-600 text-xs uppercase">Current Champion</p>
      </div>
    </div>

    <% if @rankings.length >= 3 %>
      <section class="mb-12">
        <h2 class="text-center mb-8 text-2xl">ğŸ† Champions Podium</h2>
        <div class="flex justify-center items-end gap-5 mb-10">
          <!-- 2nd Place -->
          <div class="flex-1 max-w-[300px] bg-white rounded-lg overflow-hidden shadow-lg order-1 translate-y-10">
            <div class="w-full h-52 overflow-hidden border-b-[3px] border-gray-400">
              <% if @rankings[1].restaurant.image.present? %>
                <img src="<%= @rankings[1].restaurant.image %>" alt="<%= @rankings[1].restaurant.name %>" class="w-full h-full object-cover">
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-purple-500 to-purple-700"></div>
              <% end %>
            </div>
            <div class="p-5 text-center">
              <span class="text-3xl block mb-2">ğŸ¥ˆ</span>
              <h3 class="mb-1"><%= @rankings[1].restaurant.name %></h3>
              <p class="text-gray-600 text-xs mb-2"><%= @rankings[1].restaurant.cuisine %></p>
              <p class="font-bold text-purple-600"><%= @rankings[1].total_visits %> visits</p>
            </div>
          </div>

          <!-- 1st Place -->
          <div class="flex-1 max-w-[300px] bg-white rounded-lg overflow-hidden shadow-lg order-2">
            <div class="w-full h-60 overflow-hidden border-b-[3px] border-yellow-400">
              <% if @rankings[0].restaurant.image.present? %>
                <img src="<%= @rankings[0].restaurant.image %>" alt="<%= @rankings[0].restaurant.name %>" class="w-full h-full object-cover">
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-purple-500 to-purple-700"></div>
              <% end %>
            </div>
            <div class="p-5 text-center">
              <span class="text-3xl block mb-2">ğŸ‘‘</span>
              <h3 class="mb-1"><%= @rankings[0].restaurant.name %></h3>
              <p class="text-gray-600 text-xs mb-2"><%= @rankings[0].restaurant.cuisine %></p>
              <p class="font-bold text-purple-600"><%= @rankings[0].total_visits %> visits</p>
            </div>
          </div>

          <!-- 3rd Place -->
          <div class="flex-1 max-w-[300px] bg-white rounded-lg overflow-hidden shadow-lg order-3 translate-y-20">
            <div class="w-full h-40 overflow-hidden border-b-[3px] border-amber-700">
              <% if @rankings[2].restaurant.image.present? %>
                <img src="<%= @rankings[2].restaurant.image %>" alt="<%= @rankings[2].restaurant.name %>" class="w-full h-full object-cover">
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-purple-500 to-purple-700"></div>
              <% end %>
            </div>
            <div class="p-5 text-center">
              <span class="text-3xl block mb-2">ğŸ¥‰</span>
              <h3 class="mb-1"><%= @rankings[2].restaurant.name %></h3>
              <p class="text-gray-600 text-xs mb-2"><%= @rankings[2].restaurant.cuisine %></p>
              <p class="font-bold text-purple-600"><%= @rankings[2].total_visits %> visits</p>
            </div>
          </div>
        </div>
      </section>
    <% end %>

    <section class="mb-10">
      <h2 class="text-2xl mb-5">Complete Rankings</h2>
      <div class="flex flex-col gap-4">
        <% @rankings.each do |ranking| %>
          <div class="flex items-center gap-4 bg-white p-4 rounded-lg shadow-md flex-wrap">
            <div class="flex-shrink-0 flex items-center gap-2 py-2 px-3 rounded-md font-bold min-w-[80px] justify-center <%= ranking.rank == 1 ? 'bg-yellow-400 text-gray-800' : ranking.rank == 2 ? 'bg-gray-400 text-gray-800' : ranking.rank == 3 ? 'bg-amber-700 text-white' : 'bg-gray-200' %>">
              <span class="text-sm">#<%= ranking.rank %></span>
              <% if ranking.rank == 1 %>
                <span>ğŸ‘‘</span>
              <% elsif ranking.rank == 2 %>
                <span>ğŸ¥ˆ</span>
              <% elsif ranking.rank == 3 %>
                <span>ğŸ¥‰</span>
              <% else %>
                <span>ğŸ†</span>
              <% end %>
            </div>

            <div class="flex-shrink-0 w-16 h-16 rounded-md overflow-hidden">
              <% if ranking.restaurant.image.present? %>
                <img src="<%= ranking.restaurant.image %>" alt="<%= ranking.restaurant.name %>" class="w-full h-full object-cover">
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-purple-500 to-purple-700"></div>
              <% end %>
            </div>

            <div class="flex-1">
              <h3 class="mb-1"><%= ranking.restaurant.name %></h3>
              <p class="text-gray-600 text-xs mb-2">ğŸ“ <%= ranking.restaurant.address %></p>
              <% if ranking.restaurant.cuisine.present? %>
                <span class="inline-block bg-gray-100 py-1 px-2 rounded text-xs"><%= ranking.restaurant.cuisine %></span>
              <% end %>
            </div>

            <div class="flex gap-5 flex-wrap">
              <div class="flex items-center gap-1 text-xs">
                <span>ğŸ“ˆ</span>
                <strong class="text-sm"><%= ranking.total_visits %></strong>
                <span class="text-gray-600">visits</span>
              </div>
              <div class="flex items-center gap-1 text-xs">
                <span>ğŸ‘¥</span>
                <span class="text-gray-600"><%= ranking.unique_visitors %> visitors</span>
              </div>
            </div>

            <a href="<%= restaurant_path(ranking.restaurant) %>" class="inline-flex items-center justify-center px-3 py-1.5 rounded text-xs font-medium border-2 border-purple-500 text-purple-500 hover:bg-purple-500 hover:text-white transition-all">View</a>
          </div>
        <% end %>
      </div>
    </section>

    <div class="text-center py-10 px-10 bg-gradient-to-br from-gray-50 to-gray-100 rounded-lg">
      <h3 class="text-xl mb-2">Help shape the rankings!</h3>
      <p class="text-gray-600 mb-5">Check in to your favorite ramen spots and contribute to the community rankings.</p>
      <a href="<%= root_path %>" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded text-sm font-medium bg-gradient-to-br from-purple-500 to-purple-700 text-white hover:-translate-y-0.5 hover:shadow-lg transition-all">Check In Now</a>
    </div>
  <% else %>
    <div class="text-center py-16 px-5">
      <span class="text-6xl block mb-5">ğŸ†</span>
      <h2 class="text-2xl mb-2">No rankings yet!</h2>
      <p class="text-gray-600 mb-8">Be the first to check in and start building the community rankings.</p>
      <a href="<%= root_path %>" class="inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded text-sm font-medium bg-gradient-to-br from-purple-500 to-purple-700 text-white hover:-translate-y-0.5 hover:shadow-lg transition-all">Start Checking In</a>
    </div>
  <% end %>
</div>
